<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主图 -->
    <item android:drawable="@drawable/browser" />
    
    <!-- 右下角小图
         gravity: 设置对齐方式为右下
         right/bottom: 设置距离右边和底部的距离 -->
    <item
        android:width="18dp"
        android:height="18dp"
        android:right="-1dp"
        android:bottom="-1dp"
        android:drawable="@drawable/weibo"
        android:gravity="bottom|right">
    </item>
</layer-list>
