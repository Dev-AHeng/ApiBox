<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="16dp"
        android:background="@drawable/video_dialog_progress_bg"
        android:orientation="vertical"
        android:padding="12dp">
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBrightnessIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_brightness_high_24" />
        
        <ProgressBar
            android:id="@+id/progressBrightness"
            style="@style/Widget.AppCompat.ProgressBar.Vertical"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="8dp"
            android:layout_weight="1"
            android:max="100" />
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBrightnessValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@android:color/white"
            tools:text="50%" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>